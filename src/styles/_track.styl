.track-container
  width: 80%
  margin: 20px auto 20px auto;
  transition: .3s
// Box view
.track-grid-box
  display: grid
  grid-template-columns: repeat(4, 1fr)
  grid-gap: 10px
  transition: .3s
// List view
.track-grid-list
  display: grid
  grid-template-columns: repeat(2, 1fr)
  grid-gap: 10px
.track-box
  display: flex
  flex-direction: column
  transition: .3s
  &:hover
    transform: scale(1.08)
.track-list
  display: flex
  flex-direction: row
  align-items: center
  transition: .3s
  border-radius: 6px
  padding: 5px
  box-sizing: border-box
  border: 1px solid secondary
  &:hover
    background-color: primary
    color: light
.description
  margin-left: 8px