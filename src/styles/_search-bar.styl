.search-bar-container
  background: light
  padding: 20px
  border-bottom: 1px solid secondary
.input
  width: 100%
  padding: 12px 10px
  font-size: 18px
  border-radius: 20px
  border: 1px solid secondary
  text-indent: 10px
  transition: .3s
  box-sizing: border-box
  &:focus {
    outline: none
    border: 1px solid primary
  }
  &::selection {
    color: light
    background: primary
  }
.fa-times, .fa-search
  color: secondary
  font-size: 22px
  position: absolute
  top: 10px
  right: 10px
  &:hover {
    transition: .3s
    cursor: pointer
    color: primary
  }
.search-container
  position: relative
  width: 50%
  margin: auto
.fa-th, .fa-list-ul
  font-size: 25px
  color: secondary
  transition: .3s
  &:hover {
    color: primary
    cursor: pointer
  }
  &:active {
    transform: scale(1.4);
  }