.player-container, .player-container-dark
  display: grid
  width: 100%
  grid-template-columns: 1fr 1fr
  align-items: center
  margin: auto
  border-top: 1px solid secondary
  box-sizing: border-box
  position: fixed
  z-index: 999
  bottom: 0
  height: 80px
.player-container-dark
  background-color: dark
  color: light
  border: none
.player-container
  background-color: light
  color: black
.player-description
  width: 70%
  display: flex
  align-items: center
.small-description
  display: flex
  flex-direction: column
  justify-content: space-around
  margin-left: 10px
.player-controls
  width: 100%
  display: grid
  grid-template-columns: 1fr 1fr
  align-items: center
.volume
  width: 100%
  display: grid
  grid-template-columns: repeat(2, 1fr)
.volume-icon
  justify-self: end
  padding-right:  8px
.play-pause
  width: 100%
.fa-play, .fa-pause
  border-radius: 50%
  background-color: primary
  padding: 10px
  box-sizing: border-box
  color: light
  transition: .2s
  &:hover
    cursor: pointer
    opacity: .8
    transform: scale(1.08)
.input-range
  -webkit-appearance: none
  appearance: none
  width: 100%
  height: 10px
  background: secondary
  outline: none
  opacity: .9
  -webkit-transition: .2s
  transition: opacity .2s
  border-top-right-radius: 20px
  border-top-left-radius: 20px
  border-bottom-right-radius: 20px
  border-bottom-left-radius: 20px
  cursor: grab
  justify-self: center
.input-range:hover
  opacity: 1
.input-range::-webkit-slider-thumb
  -webkit-appearance: none
  appearance: none
  width: 15px
  height: 15px
  background: primary
  cursor: grab
  border-radius: 50%
.input-range::-moz-range-thumb
  width: 15px
  height: 15px
  background: primary
  cursor: grab
  border-radius: 50%
.fas.fa-volume-off,
.fas.fa-volume-down,
.fas.fa-volume-up
  font-size: 19px
  transition: .2s
.fas.fa-volume-off:hover,
.fas.fa-volume-down:hover,
.fas.fa-volume-up:hover
  color: #424242
  cursor: pointer
  transform: scale(1.2)
.image-description
  border-radius: 8px
  width: 18%
.container
  display: flex
  width: 100%
.progress-container
  background: secondary
  border-top-right-radius: 4px
  border-top-left-radius: 4px
  border-bottom-right-radius: 4px
  border-bottom-left-radius: 4px
  width: 100%
  margin: auto
.progress
  background-color: primary
  border-top-right-radius: 4px
  border-top-left-radius: 4px
  border-bottom-right-radius: 4px
  border-bottom-left-radius: 4px
  height: 10px
.first-number
  margin-right: 6px
  font-size: 15px
.second-number
  margin-left: 6px
  font-size: 15px
@media(max-width: 620px)
  .volume
    grid-template-columns: 1fr
  .image-description
    border-radius: 8px
    width: 40%